<?xml version="1.0" encoding="utf-8"?>
<com.mfashiongallery.emag.app.view.LockWallpaperContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/preview_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mfashiongallery.emag.app.view.LockWallpaperNestedSwipeView
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 下面是Juview -->
        <RelativeLayout
            android:id="@+id/preview_detail_content_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff9977"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <com.mfashiongallery.emag.app.view.NestedRecyclerView
                android:id="@+id/recycler"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <!-- 上面是Preview -->
        <com.mfashiongallery.emag.app.view.LockWallpaperPreview
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7799ff">
        </com.mfashiongallery.emag.app.view.LockWallpaperPreview>

    </com.mfashiongallery.emag.app.view.LockWallpaperNestedSwipeView>

</com.mfashiongallery.emag.app.view.LockWallpaperContainer>